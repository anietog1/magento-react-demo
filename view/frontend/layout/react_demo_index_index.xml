<?xml version="1.0" ?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    layout="1column"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <head>
        <title>React Demo</title>
    </head>
    <body>
        <referenceContainer name="content">
            <block
                name="react.demo.page"
                template="Agusquiw_ReactDemo::children_presentation.phtml"
            >
                <block
                    name="react.demo.counter"
                    template="Agusquiw_ReactDemo::components/counter.phtml"
                />
                <block
                    name="react.demo.publisher"
                    template="Agusquiw_ReactDemo::components/publisher.phtml"
                />
                <block
                    name="react.demo.subscriber"
                    template="Agusquiw_ReactDemo::components/subscriber.phtml"
                />
                <block
                    name="react.demo.timer"
                    template="Agusquiw_ReactDemo::components/timer.phtml"
                />
            </block>
        </referenceContainer>
    </body>
</page>
